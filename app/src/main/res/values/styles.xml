<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="alertTextColor" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.NoActionBarNew">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextField_Regular" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/font_regular.otf</item>
    </style>


    <style name="TextField_Italic_Bold" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-BoldItalic.ttf</item>
    </style>

    <style name="TextField_Medium" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="TextField_Semi_Bold" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/font_semi_bold.otf</item>
    </style>

</resources>
